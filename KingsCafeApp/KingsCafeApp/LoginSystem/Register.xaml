<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingsCafeApp.LoginSystem.Register"
             Title="Register" BackgroundColor="White"
            >
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
            <Entry IsTextPredictionEnabled="True" Keyboard="Chat" Placeholder="Name" x:Name="txtname" />
            <Entry  Keyboard="Numeric" Placeholder="Phone" x:Name="txtphone" />
            <Entry  Keyboard="Email" Placeholder="Email" x:Name="txtemail" />
            <Entry  IsPassword="True" Placeholder="Password" x:Name="txtPassword" />
            <Entry  IsPassword="True" Placeholder="ConfrimPassword" x:Name="txtCPassword" />

            <ActivityIndicator x:Name="LoadingInd" IsRunning="True"/>

            <Button Text="Register" Clicked="Button_Clicked" CornerRadius="20" TextColor="Black" BackgroundColor="#ff914d" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>